<input class="form-control"
       placeholder="Search games..."
       value="@Text"
       @oninput="OnInput" />

<button class="btn btn-primary mt-2"
        @onclick="OnClick"
        disabled="@IsDisabled">
    Search
</button>

@code {
    // 2-way bindable parameter
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public EventCallback<string> TextChanged { get; set; }

    [Parameter] public EventCallback OnSearch { get; set; }

    [Parameter] public bool Busy { get; set; }
    private bool IsDisabled => Busy || string.IsNullOrWhiteSpace(Text);

    private Task OnInput(ChangeEventArgs e)
    {
        Text = e.Value?.ToString() ?? "";
        return TextChanged.InvokeAsync(Text);
    }

    private Task OnClick()
    {
        if (IsDisabled) return Task.CompletedTask;
        return OnSearch.InvokeAsync();
    }
}
