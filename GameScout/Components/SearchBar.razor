<InputText @bind-Value="Value" placeholder="Search games..." class="form-control" />
<button class="btn btn-primary mt-2"
        @onclick="HandleSearch"
        disabled="@IsDisabled">
    Search
</button>

@code {
    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> OnSearch { get; set; }

    private bool _busy;
    private bool IsDisabled => _busy || string.IsNullOrWhiteSpace(Value);

    private async Task HandleSearch()
    {
        if (IsDisabled) return;
        _busy = true;
        try { await OnSearch.InvokeAsync(Value?.Trim()); }
        finally { _busy = false; }
    }
}
